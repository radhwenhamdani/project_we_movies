<div class="col-lg-3">
    <div class="col-lg-12 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Filtres</h5>
                <form id="genre-form">
                    {% set getGenres = app.request.query.get('genres') %}
                    {% for genre in genres %}
                        <div class="form-check">
                            <input {% if genre.id in getGenres|split(',') %}checked{% endif %} class="genre-check-input" type="checkbox" value="{{ genre.id }}" id="genre-{{ genre.id }}">
                            <label class="form-check-label" for="comedy">{{ genre.name }}</label>
                        </div>
                    {% endfor %}
                </form>
            </div>
        </div>
    </div>
</div>